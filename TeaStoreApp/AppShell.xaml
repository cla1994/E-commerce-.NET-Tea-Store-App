<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TeaStoreApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TeaStoreApp"
    xmlns:pages="clr-namespace:TeaStoreApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="TeaStoreApp"
    Shell.TabBarBackgroundColor="#18565F"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="FloralWhite">

    <TabBar>
        <Tab Title="Home"
             Icon="home">   <!-- icona è da cartella immagini-->
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
            <!-- aggiunto namespace pages. Questo tab mostrerà home page -->
        </Tab>
        
        <Tab Title="Cart"
             Icon="cart">
            <ShellContent ContentTemplate="{DataTemplate pages:CartPage}"/>
        </Tab>

        <Tab Title="Favorites"
             Icon="heart">
            <ShellContent ContentTemplate="{DataTemplate pages:FavoritesPage}"/>
        </Tab>

        <Tab Title="Profile"
             Icon="profile">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}"/>
        </Tab>
    </TabBar>

</Shell>
